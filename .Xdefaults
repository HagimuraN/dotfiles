!-------------------------------------------------------------------------------
! Xft settings
!-------------------------------------------------------------------------------
!Xft.dpi:                    96
!Xft.antialias:              false
!Xft.rgba:                   rgb
!Xft.hinting:                true
!Xft.hintstyle:              hintslight

!-------------------------------------------------------------------------------
! URxvt settings
! Colours lifted from Solarized (http://ethanschoonover.com/solarized)
! More info at:
! http://pod.tst.eu/http://cvs.schmorp.de/rxvt-unicode/doc/rxvt.1.pod
!-------------------------------------------------------------------------------

URxvt.depth:                32
URxvt.geometry:             90x30
URxvt.transparent:          false
URxvt.fading:               0
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            50000
URxvt.internalBorder:       3
URxvt.lineSpace:            0

! Fonts
URxvt.allow_bold:           true
/* URxvt.font:                 -*-terminus-medium-r-normal-*-12-120-72-72-c-60-iso8859-1 */
URxvt.font: xft:Ubuntu\ Mono\ derivative\ Powerline:pixelsize=16
!URxvt.boldFont: xft:Ubuntu\ Mono\ derivative\ Powerline:bold:pixelsize=16
!URxvt.font: xft:Meslo LG S for Powerline:pixelsize=14
!URxvt.boldFont: xft:Meslo LG L Bold for Powerline:pixelsize=16
!URxvt*font: xft:Terminess Powerline:size=12
! Fix font space
URxvt.letterSpace: 0

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,matcher,xkr-clipboard
URxvt.iso14755:             false
URxvt.keysym.Shift-Control-C: perl:clipboard:copy
! URxvt.keysym.Shift-Control-C: eval:selection_to_clipboard
URxvt.keysym.Shift-Control-V: eval:paste_clipboard
URxvt.matcher.button:       1
URxvt.urlLauncher:          firefox

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false
*cursorColor:               #93a1a1

! Pointer
URxvt.pointerBlank:         true

*foreground:                #18f018
*foreground_bold:           #a8a19f
*cursor:                    #a8a19f
*background:                #1b1918
!!*background: rgba(0, 0, 0, .7)
*fadeColor:             #002b36
*pointerColorBackground: #586e75
*pointerColorForeground: #93a1a1

!! black dark/light
*color0: #424242
*color8: #5d5d5d

!! red dark/light
*color1: #dc322f
*color9: #cb4b16
!00212a

!! green dark/light
*color2: #54ff54
!!*color2: #000000

*color10: #4a8b4a

!! yellow dark/light
*color3: #b58900
*color11: #657b83

!! blue dark/light
*color4: #ccf9ee
*color12: #54ffff 

!! magenta dark/light
*color5: #d33682
*color13: #6c71c4

!! cyan dark/light
*color6: #2aa198
*color14: #93a1a1

!! white dark/light
*color7: #607f67
*color15: #fdf6e3

URxvt.intensityStyles:	false
URxvt.background:       [85]#000000


